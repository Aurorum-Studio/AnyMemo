<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.liberty.android.fantastischmemo"
    android:installLocation="auto"
    android:versionCode="59"
    android:versionName="5.0.0">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application 
        android:icon="@drawable/icon" 
        android:label="@string/app_name"
    	android:debuggable="true">
        <activity android:name=".AnyMemo"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".OpenScreen" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" />
        <activity 
            android:name=".FileBrowser" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" />
        <activity 
            android:name=".MemoScreen" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" />
        <activity 
            android:name=".OptionScreen" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".SettingsScreen" ></activity>
        <activity android:name=".DetailScreen"></activity>
        <activity android:name=".AddItemScreen"></activity>
        <activity android:name=".EditScreen"></activity>
        <activity 
            android:name=".Downloader" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".ListEditScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" />

    </application>

<uses-sdk android:minSdkVersion="4" />


</manifest> 
