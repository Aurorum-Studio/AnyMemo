<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recorder_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/recorder_record_your_memo"
        android:textSize="15dip" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/recorder_mic_description"
        android:scaleType="fitCenter"
        android:src="@drawable/recorder_mic" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/recorder_record_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/recorder_record_description"
            android:src="@drawable/recorder_record" />

        <ImageButton
            android:id="@+id/recorder_play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/recorder_play_description"
            android:src="@drawable/recorder_play" />

        <ImageButton
            android:id="@+id/recorder_return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/recorder_return_description"
            android:background="@android:color/transparent"
            android:src="@drawable/recorder_return" />

    </LinearLayout>

</LinearLayout>