<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:text="@string/add_screen_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="3dip"/>
        <EditText
            android:id="@+id/edit_dialog_question_entry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:background="@android:drawable/editbox_background"/>
        <TextView 
            android:text="@string/add_screen_answer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="3dip"/>
        <EditText
            android:id="@+id/edit_dialog_answer_entry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:background="@android:drawable/editbox_background"/>
        <TextView 
            android:text="@string/edit_dialog_category"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="3dip"/>
        <EditText
            android:id="@+id/edit_dialog_category_entry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:background="@android:drawable/editbox_background"/>
    </LinearLayout>
</ScrollView>
